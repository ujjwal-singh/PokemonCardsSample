<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ujjwal.pokemoncardssample.UserDetails">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#64b5f6"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:text="Username"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/userDetailsUsername"
                android:text="Loading ..."
                android:layout_weight="1"
                android:textAlignment="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:text="Matches Played"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/userDetailsMatchesPlayed"
                android:text="Loading ..."
                android:layout_weight="1"
                android:textAlignment="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:text="Matches Won"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/userDetailsMatchesWon"
                android:text="Loading ..."
                android:layout_weight="1"
                android:textAlignment="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <TextView
                android:text="Matches Lost"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/userDetailsMatchesLost"
                android:text="Loading ..."
                android:layout_weight="1"
                android:textAlignment="center"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
